<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"

    android:orientation="vertical"
    >

  <TextView
      android:id="@+id/textView2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginTop="16dp"
      android:gravity="center"
      android:text="Update You PIN"
      android:textColor="@color/zen_orange"
      android:textSize="16sp"
      android:textStyle="bold"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="16dp"
      android:orientation="vertical"
      >
    <EditText
        android:id="@+id/editText_update_pin_public_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Your ZEN Public Address"
        android:inputType="text"
        android:textColor="@color/Black"
        android:textColorHint="@color/appcolor_grey"
        />
    <EditText
        android:id="@+id/editText_update_pin_public_address_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Your ZEN Public Address Key"
        android:inputType="text"
        android:textColor="@color/Black"
        android:textColorHint="@color/appcolor_grey"
        />
    <EditText
        android:id="@+id/editText_update_pin_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter a NEW PIN here"
        android:inputType="number"
        android:textColor="@color/Black"
        android:textColorHint="@color/appcolor_grey"
        />
  </LinearLayout>


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_margin="16dp"
      android:orientation="horizontal"
      style="?android:attr/buttonBarStyle"
      >

    <Button
        android:id="@+id/btn_update_pin_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:layout_weight="1"
        android:background="@drawable/button_send"
        android:text="Change PIN"
        android:textColor="@color/White"
        android:textStyle="bold"
        style="?android:attr/borderlessButtonStyle"
        />

    <Button
        android:id="@+id/btn_update_pin_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_weight="1"
        android:background="@drawable/button_send"
        android:text="Close"
        android:textColor="@color/White"
        android:textStyle="bold"
        style="?android:attr/borderlessButtonStyle"
        />
  </LinearLayout>

</LinearLayout>