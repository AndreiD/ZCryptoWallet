<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    >


  <RadioGroup
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="0"
      android:orientation="horizontal"
      android:padding="4dp"
      >
    <RadioButton
        android:id="@+id/radioButtonPrivate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:layout_weight="1"
        android:checked="true"
        android:text="Private Address"
        android:textColor="@color/app_grey"
        />
    <RadioButton
        android:id="@+id/radioButtonPublic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_weight="1"
        android:text="Public Address"
        android:textColor="@color/app_grey"
        />
  </RadioGroup>
  <ImageView
      android:id="@+id/imageView_qrcode_receive"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginLeft="32dp"
      android:layout_marginRight="32dp"
      android:layout_marginTop="32dp"
      android:layout_weight="2"
      android:gravity="center"
      app:srcCompat="@mipmap/ic_launcher"
      />

  <TextView
      android:id="@+id/textView_receive_zenaddress"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginBottom="64dp"
      android:layout_weight="2"
      android:gravity="center"
      android:text="zen.address"
      android:textColor="@color/appcolor_grey"
      android:textIsSelectable="true"
      android:textSize="12sp"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
    <Button
        android:id="@+id/btn_copy_clipboard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:background="@drawable/button_send"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        style="?android:attr/borderlessButtonStyle"
        android:text="Copy to Clipboard"
        android:textColor="@color/white"
        android:textSize="14sp"
        />
    <Button
        android:id="@+id/btn_receive_share"
        android:layout_width="0dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:background="@drawable/button_send"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Or Share with Other Apps"
        android:textColor="@color/white"
        android:textSize="14sp"
        />

  </LinearLayout>

</LinearLayout>