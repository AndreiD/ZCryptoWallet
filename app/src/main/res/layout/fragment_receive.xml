<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    >


  <ImageView
      android:id="@+id/imageView_qrcode_receive"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginLeft="32dp"
      android:layout_marginRight="32dp"
      android:layout_weight="2"
      android:gravity="center"
      app:srcCompat="@drawable/ic_launcher"
      />

  <TextView
      android:id="@+id/textView_receive_btcaddress"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginBottom="64dp"
      android:textIsSelectable="true"
      android:layout_weight="2"
      android:gravity="center"
      android:text="btc.address"
      android:textColor="@color/appcolor_grey"
      android:textSize="12sp"
      />
  <Button
      android:id="@+id/btn_receive_share"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Or Share with Other Apps"
      android:textColor="@color/white"
      />

</LinearLayout>