<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/border_round_grey"
    android:orientation="vertical"

    >

  <TextView
      android:id="@+id/textView2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginTop="16dp"
      android:gravity="center"
      android:text="Please keep this information somewhere safe!"
      android:textColor="@color/red_light"
      android:textSize="16sp"
      android:textStyle="bold"
      />
  <TextView
      android:id="@+id/txt_dia"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_margin="8dp"
      android:gravity="center"
      android:text="Please copy the private keys. This is the only way to restore an account if you change phones."
      android:textColor="@android:color/holo_orange_light"
      android:textSize="15dp"
      android:textStyle="bold"
      />


  <EditText
      android:id="@+id/editText_dlg_keys"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:inputType="textMultiLine"
      android:lines="15"
      android:textSize="12sp"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_margin="8dp"
      android:orientation="horizontal"
      style="?android:attr/buttonBarStyle"
      >

    <Button
        android:id="@+id/btn_dlg_clipboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:text="Copy to clipboard"
        android:textStyle="bold"
        style="?android:attr/buttonBarButtonStyle"
        />

    <Button
        android:id="@+id/btn_dlg_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:text="Continue"
        android:textStyle="bold"
        style="?android:attr/buttonBarButtonStyle"
        />
  </LinearLayout>

</LinearLayout>