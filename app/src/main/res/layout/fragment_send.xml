<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    >

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/border_round_blue"
          android:orientation="vertical"
          android:padding="4dp"
          >
        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="0"
            android:text="Account to use"
            android:textColor="@color/White"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"

            android:orientation="horizontal"
            android:padding="4dp"
            >
          <RadioButton
              android:id="@+id/send_radioButtonPrivate"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:buttonTint="@color/White"
              android:checked="true"
              android:padding="8dp"
              android:text="Private Address"
              android:textColor="@color/White"
              />
          <RadioButton
              android:id="@+id/send_radioButtonPublic"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:buttonTint="@color/White"
              android:padding="8dp"
              android:text="Public Address"
              android:textColor="@color/White"
              />
        </RadioGroup>
      </LinearLayout>


      <TextView
          android:id="@+id/textView3"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="8dp"
          android:layout_marginTop="16dp"
          android:text="Send to "
          android:textSize="18sp"
          android:textStyle="bold"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          android:orientation="horizontal"
          >
        <EditText
            android:id="@+id/send_editText_to"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:inputType="text"
            android:lines="2"
            android:text="Name"
            android:textSize="12sp"
            />
        <ImageButton
            android:id="@+id/send_imageButton_scanqr"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/border_round_blue_border"
            android:padding="16dp"
            app:srcCompat="@android:drawable/ic_menu_camera"
            />
      </LinearLayout>

      <TextView
          android:id="@+id/send_textView_amount"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="8dp"
          android:layout_marginTop="32dp"
          android:layout_weight="0"
          android:text="Amount "
          android:textSize="18sp"
          android:textStyle="bold"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          android:orientation="horizontal"
          >
        <EditText
            android:id="@+id/send_editText_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberDecimal"
            />
        <TextView
            android:id="@+id/send_textView_zen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:text="ZEN"
            android:textSize="25sp"
            android:textStyle="bold"
            />


      </LinearLayout>
      +
      <TextView
          android:id="@+id/send_textView_fee"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:layout_marginTop="8dp"
          android:layout_weight="0"
          android:text="Fee: 0.0001 ZEN"
          android:textColor="@color/app_grey"
          />

      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="32dp"
          >
        <Button
            android:id="@+id/send_button_send"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:gravity="center"
            android:text="SEND"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            />
      </FrameLayout>
    </LinearLayout>
  </ScrollView>
</LinearLayout>