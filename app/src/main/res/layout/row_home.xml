<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_marginLeft="8dp"
      android:orientation="horizontal"
      >
    <TextView
        android:id="@+id/row_tx_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_weight="2"
        android:textSize="12sp"
        tools:text="10 November 20123"
        />
    <TextView
        android:id="@+id/row_tx_amount"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:textColor="@color/material_green"
        android:textSize="12sp"
        tools:text="-0.00001587"
        />
    <TextView
        android:id="@+id/row_tx_balance"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:textColor="@color/app_dark_blue"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:text="3.00001587"
        />
  </LinearLayout>
</RelativeLayout>